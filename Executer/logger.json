{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "basic": {
      "format": "%(asctime)s [%(levelname)5s|%(name)s|%(lineno)s] %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "basic"
    },
    "file_debug": {
      "class": "logging.FileHandler",
      "level": "DEBUG",
      "formatter": "basic",
      "filename": "debug.log"
    },
    "file_error": {
      "class": "logging.FileHandler",
      "level": "ERROR",
      "formatter": "basic",
      "filename": "error.log"
    },
    "rabbit": {
			"level": "DEBUG",
			"class": "python_logging_rabbitmq.RabbitMQHandler",
			"host": "localhost"
		}
  },
  "loggers": {
    "": {
      "level": "DEBUG",
      "handlers": ["console", "file_debug", "file_error", "rabbit"]
    }
  }
}